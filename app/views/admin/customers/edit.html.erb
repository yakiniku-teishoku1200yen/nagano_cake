    <h2><%= @customer.full_name %>さんの会員情報編集</h2>

  <%= form_with(model: @customer, url: admin_customer_path, local: true ,method: :patch) do |f| %>

    <div>
      <div>
        会員ID
        <%= f.label :"#{@customer.id}" %>
      </div>

      <div>
        氏名
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </div>

      <div>
        フリガナ
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>

      <div>
        "郵便番号
        <%= f.text_field :post_code %>
      </div>

      <div>
        住所
        <%= f.text_field :address %>
      </div>

      <div>
        電話番号
        <%= f.text_field :phone_number %>
      </div>

      <div>
        メールアドレス
        <%= f.text_field :email%>
      </div>


      <div>
        会員ステータス
        　<%= f.radio_button :is_active, true %>
        　<%= f.label :is_active, "退会済", {value: :true, style: "display: inline-block;"} %>
        　<%= f.radio_button :is_active, false %>
        　<%= f.label :is_active, "有効", {value: :false, style: "display: inline-block;"} %>
      </div>
    </div>
      <div>
        <%= f.submit '変更を保存する'%>
      </div>
  <% end %>
