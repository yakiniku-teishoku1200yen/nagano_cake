<div class="container">
  <h4 class="m-4"><span style="background-color:#dddddd">注文履歴一覧</span></h4>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <table class="table">
        <tr>
          <thead class="table-secondary">
             <tr>
               <th>購入日時</th>
               <th>購入者</th>
               <th>注文個数</th>
               <th>注文ステータス</th>
               <th colspan="3"></th>
             </tr>
           </thead>
           <tbody>
             <% @orders.each do |order| %>
              <tr>
                 <td><%= link_to admin_order_path(order) do %>
                 <%= order.created_at.strftime("%Y-%m-%d %H:%M")  %>
                 <% end %>
                 </td>
                 <td><%= order.name %></td>
                 <td><%= order.order_items.sum(:order_quantity) %></td>
                 <td><%= Order.statuses_i18n[order.status] %></td>
               </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
 </div>