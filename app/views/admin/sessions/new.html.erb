<h4 class="text-center m-5">管理者ログイン</h4>
<div class="container">
<div class="row ">
    <div class=" col-6 offset-md-3">
      <%= form_with model: @admin, url: admin_session_path do |f| %>
      <form>
        <div class="form-group row">
          <label for="text3a" class="col-sm-4 col-form-label"><%= f.label :email, "メールアドレス" ,class: ""%></label>
            <div class="col-sm-8">
            <%= f.email_field :email, autocomplete: "email",class: "form-control" %>
            </div>
        </div>
        <div class="form-group row mb-5">
          <label for="text3b" class="col-sm-4 col-form-label"><%= f.label :password, "パスワード" %></label>
          <div class="col-sm-8">
            <%= f.password_field :password, autocomplete: "current-password" ,class: "form-control"%>
          </div>
        </div>
        <div class="text-center mb-5 ">
          <%= f.submit " ログイン " ,class: "btn btn-primary"%>
        </div>
      </form>
      <% end %>
    </div>
  </div>
</div>

