
    <div class="col-md-8 offset-md-1">
          <div class="text-success">
          <%= flash[:notice] %>
          </div>
      <p><h2 class="mt-3"><i class="fas fa-truck"></i>配送先登録・一覧</h2></p>
      <div class="address-form-group">
        <%= form_with model: @address do |f| %>

     <div class="row">
　    <div class="col-5 ml-5 mb-4">
       <%= f.label :postcode, "郵便番号（ハイフンなし）" %>
       </div>
      <div class="col">
       <%= f.text_field :post_code %>
      </div>
     </div>
     
     <div class="row">
　    <div class="col-5 ml-4 mb-3">
　     <%= f.label :shipping_address, "住所" %>
　    </div>
　    <div class="col">
　      <%= f.text_field :shipping_address %>
　    </div>
　   </div>
　   
　   <div class="row">
　    <div class="col-5 ml-4 mb-3">
　      <%= f.label :name, "宛名" %>
　    </div>
　     <div class="col">
　      <%= f.text_field :name %>
　     </div>
　   </div>

          <%= f.submit '新規登録',class:"btn btn-success" %>
        <% end %>
      </div>

      <table class="table table-bordered">
        <thead align="center">
          <tr class="table-danger">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
          <th colspan="4"></th>
          </tr>
      <% @addresses.each do |address| %>
        　<tr>
      　   <td> <%= address.post_code %></td>
          <td><%= address.shipping_address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集する", edit_address_path(address),class: "btn btn-sm btn-outline-success" %></td>
          <td><%= link_to "削除する", address_path(address), method: :delete,class: "btn btn-sm btn-outline-danger", "data-confirm" => "本当に削除しますか？" %></td>
      <% end %>
          </tr>
        </tbody>
      </table>
    </div>