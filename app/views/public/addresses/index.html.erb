
    <div class="col-md-8 offset-md-1">
          <div class="text-success">
          <%= flash[:notice] %>
          </div>
      <p><h2 class="mt-3"><i class="fas fa-truck"></i>配送先登録・一覧</h2></p>
      <div class="address-form-group">
        <%= form_with model: @address do |f| %>

          <div class="row">
            <%= f.label :"郵便番号ハイフンなし" %>
            <%= f.text_field :post_code %>
          </div>
	        <div class="row">
	          <%= f.label :"住所" %>
	          <%= f.text_field :shipping_address %>
	        </div>
	        <div class="row">
	          <%= f.label :"宛名" %>
	          <%= f.text_field :name %>
	        </div>

          <%= f.submit '新規登録',class:"btn btn-success" %>
        <% end %>
      </div>

      <table class="table table-bordered">
        <thead align="center">
          <tr class="table-danger">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
          <th colspan="4"></th>
          </tr>
      <% @addresses.each do |address| %>
        　<tr>
      　   <td> <%= address.post_code %></td>
          <td><%= address.shipping_address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集する", edit_address_path(address),class: "btn btn-sm btn-outline-success" %></td>
          <td><%= link_to "削除する", address_path(address), method: :delete,class: "btn btn-sm btn-outline-danger", "data-confirm" => "本当に削除しますか？" %></td>
      <% end %>
          </tr>
        </tbody>
      </table>
    </div>