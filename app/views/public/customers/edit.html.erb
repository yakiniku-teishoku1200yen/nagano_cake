<h2 class="col-md-3 offset-md-1 mt-5 mb-5">会員情報編集</h2>
<div class="container">
  <div class="row">
    <%= form_with model: @customer, url: customer_path(@customer) do |f| %>
      <div class="row mb-3">
        <%= f.label :"氏名" %>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </div>
      <div class="row mb-3">
        <%= f.label :"フリガナ" %>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>
      <div class="row mb-3">
        <%= f.label :"郵便番号" %>
        <%= f.text_field :post_code %>
      </div>
      <div class="row mb-3">
        <%= f.label :"住所" %>
        <%= f.text_field :address %>
      </div>
      <div class="row mb-3">
        <%= f.label :"電話番号" %>
        <%= f.text_field :phone_number %>
      </div>
      <div class="row mb-3">
        <%= f.label :"メールアドレス" %>
        <%= f.email_field :email %>
      </div>

      <div class="row">
        <div class="col-mg-3 mt-3 mb-5">
          <%= f.submit "編集内容を保存", class: "btn btn-outline-success" %>
        </div>
        <div class="col-md-5 offset-md-2 mt-3 mb-5">
          <%= link_to "退会する", quit_path, class: "btn btn-outline-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>