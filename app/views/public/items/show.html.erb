<div class="container m-5">
  <div class="row">
    <div class="text-center col-sm-5">
      <%= image_tag @item.get_image(350,350)%>
    </div>
      <div class="col-sm-7">
        <table class="table table-borderless">
          <tr>
            <td><h3><%= @item.name  %></h3></td>
          </tr>
          <tr>
            <td><h6><%= @item.explanation %></h6></td>
          </tr>
          <tr>
            <td><h3>¥<%= @item.with_tax_price %>(税込)</h3></td>
          </tr>
          <tr>
            <td>
              <% if @item.is_ordered == true %>
              <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
              <%= f.hidden_field :item_id, value: @item.id %>
              <%= f.select :amount, *[1..10], include_blank: "個数選択" %>
              <%= f.submit "カートに入れる", class: "btn btn-outline-success" %>
              <% end %>
              <% else %>
              <h4>売り切れ</h4>
              <% end %>
            </td>
          </tr>
        </table>
      </div>
  </div>
</div>