<div class="container">
  <div class="row mt-4">
    <div class="col-xl-10">
     <h2 class="mb-5"><strong><i class="	far fa-list-alt"></i>注文情報確認</strong></h2>
    </div>
     <div class="col-8">
      <table class="table table-bordered mb-5">
        <thead align="center">
          <tr class="table-danger">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th colspan="4"></th>
          </tr>
      <% @cart_items.each do |cart_item| %>
        　<tr>
      　   <td> <%=cart_item.item.id %></td>
          <td><%=cart_item.item.price %></td>
          <td><%=cart_item.amount %></td>
          <td><%=cart_item.item_id %></td>
          <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
      <% end %>
          </tr>
        </tbody>
      </table>
    <div class="col-4">
        <table class="table table-bordered">
          <tr>
            <th class="table-secondary">送料</th>
            <td><!--%= @order.shipping_cost.to_s(:delimited) %--></td>
          </tr>
          <tr>
            <th class="table-secondary">商品合計</th>
            <td><!--%= @total.to_s(:delimited) %--></td>
          </tr>
          <tr>
            <th class="table-secondary">請求金額</th>
            <td><!--%= (@total + @order.shipping_cost).to_s(:delimited) %--></td>
          </tr>
        </table>
      </div>
  </div>
         
         
 
      
      <div class="mb-5">
          <strong>支払方法</strong>
           <%= @order.payment_method_i18n %>
      </div>

      <div class="mb-5">
        <strong>お届け先</strong>
           <%= "〒" + @order.post_code %>
           <%= @order.address %>
           <%= @order.name %>
      </div>


    <div class="text-center mb-5">
      <%= form_with model: @order, url: orders_path, local: true, method: :post do |f| %>
        <%= f.hidden_field :post_code, :value => @order.post_code %>
        <%= f.hidden_field :payment_method, :value => @order.payment_method  %>
        <%= f.hidden_field :address, :value => @order.address%>
        <%= f.hidden_field :name, :value => @order.name%>
        
        <!-- %= f.hidden_field :total_payment, :value => @total + @order.shipping_cost  %-->
     
      <%= f.submit "注文を確定", class: "btn btn-success btn-lg" %>
      <% end %>
    </div>
   </div>
</div>