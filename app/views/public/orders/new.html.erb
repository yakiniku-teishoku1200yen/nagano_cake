<div class="col-md-8 offset-md-1">
<p><h2 class="mt-3"><i class="far fa-edit"></i>注文情報入力</h2></p>

<h5 class="col-md-8 mt-5">支払方法</h5>

<%= form_with model: @order, url: confirm_path, method: :get do |f| %>

<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>

<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>


<h5 class="col-md-8 mt-5">お届け先</h5>

<%= f.radio_button :select_address, "own_address" %>
<%= f.label :select_address, "自身の住所" %><br>
<%= @customer.post_code %><br>
<%= @customer.address %><br>
<%= @customer.full_name %><br>
<br>


<%= f.radio_button :select_address, "registered_address" %>
<%= f.label :select_address, "登録済み住所" %><br>
<%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %><br><br>

<%= f.radio_button :select_address, "new_delivery_address" %>
<%= f.label :select_address, "新しいお届け先" %><br>

　<div class="address-form-group">
   <p>郵便番号(ハイフンなし)</p><%= f.text_field :post_code %>
   <p>住所</p><%= f.text_field :address %>
   <p>宛名</p><%= f.text_field :name %><br>
    <div class="mt-3"><%= f.submit '確認画面へ進む',class:"btn btn-danger" %></div>

<% end %>
　</div>


</div>
