<div class="container mt-5">
  <div class="row">
    <div class="col-12">
<h2><i class="far fa-edit"></i>注文履歴詳細</h2>
</div>

    <div class="col-8">
      <h5 class="my-2"><strong>注文情報</strong></h5>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th class="table-secondary">注文日</th>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <th class="table-secondary">配送先</th>
              <td>
                <%= "〒" + @order.post_code %> <br>
                <%= @order.address %> <br>
                <%= @order.name %>
              </td>
            </tr>
            <tr>
              <th class="table-secondary">支払方法</th>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <th class="table-secondary">ステータス</th>
              <td><%= @order.status_i18n %></td>
            </tr>
          </tbody>
        </table>
    </div>
    <div class="col-4">
      <h5 class="my-2"><strong>請求情報</strong></h5>
      <table class="table table-bordered">
        <tr>
          <th class="table-secondary">商品合計</th>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-secondary">配送料</th>
          <td><%= @order.shipping_cost.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-secondary">ご請求額</th>
          <td><%= @order.total_payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <h5 class="my-2 mt-2"><strong>注文内容</strong></h5>
      <table class="table table-bordered mb-4">
        <thead>
          <tr class="table-secondary">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <% @order_items.each do |order_detail| %>

        <tbody>
            <tr>
              <td class="align-middle">
                <%= order_detail.items.name %>
              </td>
              <td class="align-middle"><%= (order_detail.price*1.1).floor.to_s(:delimited) %></td>
              <td class="align-middle"><%= order_detail.order_quantity %></td>
              <td class="align-middle"><%= (order_detail.subtotal).to_s(:delimited) %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>