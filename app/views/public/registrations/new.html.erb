<div class="container">
  <div class="row">
    <h2 class="col-md-3 mt-4 mb-4">新規会員登録</h2>
    <div class="col-md-10">
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <div class="row mb-3">
        <%= f.label :"名前", class: "col-md-3" %>
        <%= f.label :"(姓)", class: "col-md-1" %>
        <%= f.text_field :last_name, class: "col-md-3" %>
        <%= f.label :"(名)", class: "col-md-1" %>
        <%= f.text_field :first_name, class: "col-md-3" %>
      </div>

      <div class="row mb-3">
        <%= f.label :"フリガナ", class: "col-md-3" %>
        <%= f.label :"(セイ)", class: "col-md-1" %>
        <%= f.text_field :last_name_kana, class: "col-md-3" %>
        <%= f.label :"(メイ)", class: "col-md-1" %>
        <%= f.text_field :first_name_kana, class: "col-md-3" %>
      </div>

      <div class="row mb-3">
        <%= f.label :"メールアドレス", class: "col-md-3" %>
        <%= f.email_field :email, class: "offset-md-1 col-md-3" %>
      </div>

      <div class="row mb-3">
        <%= f.label :"郵便番号", class: "col-md-3" %>
        <%= f.text_field :post_code, class: "offset-md-1 col-md-3" %>
      </div>

      <div class="row mb-3">
        <%= f.label :"住所", class: "col-md-3" %>
        <%= f.text_field :address, class: "offset-md-1 col-md-7" %>
      </div>

      <div class="row mb-3">
        <%= f.label :"電話番号", class: "col-md-3" %>
        <%= f.text_field :phone_number, class: "offset-md-1 col-md-3" %>
      </div>

      <div class="row mb-3">
        <% if @minimum_password_length %>
          <%= f.label :"パスワード(#{ @minimum_password_length }文字以上)", class: "col-md-3" %>
        <% else %>
          <%= f.label :"パスワード", class: "col-md-3" %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "offset-md-1 col-md-3" %>
      </div>

      <div class="row mb-3">
        <%= f.label :"パスワード（確認用）", class: "col-md-3" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "offset-md-1 col-md-3" %>
      </div>

      <div class="mb-4">
        <%= f.submit "新規登録", class: "btn btn-outline-success" %>
      </div>
      <% end %>
    </div>
  </div>

    <div class="mb-3">
      <h3>既に登録済みの方</h3>
    </div>

    <div class="mb-4">
      <%= link_to "こちら", new_customer_session_path %>からログインしてください。
    </div>
</div>